file_identifier "PIUF";

namespace data;

struct Range {
  begin:uint32;
  end:uint32;
}

struct Size {
  w:uint32;
  h:uint32;
}

struct SheetFrame {
  x:uint32;
  y:uint32;
  w:uint32;
  h:uint32;
  duration:uint32;
}

struct Animation {
  name:Range;
  frame_range:Range;
}

struct Sprite {
  name:Range;
  size:Size;
  animation_frame:Range;
}

table Data {
  sheet:[uint8];
  text:string;
  sheet_frames:[SheetFrame];
  animations:[Animation];
  sprites:[Sprite];
}

root_type Data;
